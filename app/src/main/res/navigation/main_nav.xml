    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/imageItemFragment">

    <fragment
        android:id="@+id/imageItemFragment"
        android:name="mx.marcrobito.gallery.ImageItemFragment"
        android:label="ImageItemFragment" >
        <action
            android:id="@+id/action_imageItemFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="mx.marcrobito.gallery.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>